package bg.jwd.webBank.database;

import java.util.HashMap;
import java.util.Map;
import java.util.Set;

import bg.jwd.webBank.entities.Account;
import bg.jwd.webBank.entities.User;

public class Database {
	private Map<User, Account> usersAccount;

	public Database() {
		this.usersAccount = new HashMap<>();
	}

	public void addUser(User user) {
		this.usersAccount.put(user, null);
	}
	
	public void addUserAccount(User user, Account account){
		this.usersAccount.put(user, account);
	}

	public Set<User> getAllUsers() {
		return this.usersAccount.keySet();
	}

	public Account getCurrAccount(User user) {
		return this.usersAccount.get(user);
	}

	public Map<User, Account> getAllUsersWithAcc() {
		return this.usersAccount;
	}
}
