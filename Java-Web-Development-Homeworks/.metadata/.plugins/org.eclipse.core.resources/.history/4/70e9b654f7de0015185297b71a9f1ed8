package bg.jwd.webBank.database;

import java.util.ArrayList;
import java.util.List;

import bg.jwd.webBank.entities.Account;
import bg.jwd.webBank.entities.User;

public class DatabaseImpl implements Database {
	private List<User> users;

	public DatabaseImpl() {
		this.users = new ArrayList<>();
	}

	public User getUser(User user) {
		User currUser = this.users.stream().filter(u -> u.getUsername() == user.getUsername()).findFirst().get();

		return currUser;
	}

	public List<User> getAllUsers() {
		return this.users;
	}

	public Account getCurrAccount(User user) {
		Account acc = this.users.stream().filter(u -> u.getUsername() == user.getUsername()).findFirst().get()
				.getAccount();

		return acc;
	}

	public void addUser(User user) {
		this.users.add(user);
	}

	public void addAccToUser(User user, Account account) {
		User currUser = this.getUser(user);
		currUser.setAccount(account);
	}
}
