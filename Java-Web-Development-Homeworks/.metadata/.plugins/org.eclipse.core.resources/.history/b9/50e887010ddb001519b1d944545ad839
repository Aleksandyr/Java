package bg.jwd.bankAcc.services;

import java.util.ArrayList;
import java.util.List;

import bg.jwd.bankAcc.entities.User;

public class BankAccountServiceImpl implements BankAccountService {

	private static List<User> users = new ArrayList<>();
	
	@Override
	public void deposite(User user, double amount) throws Exception {
		if (amount > 0) {
			user.setAmount(amount);
		} else {
			throw new Exception("Invalid amount");
		}
	}

	@Override
	public void withdraw(User user, double amount) throws Exception {
		double userAmount = user.getAmount();
		double userAmountHalf = session.getAttribute('userAmount');
		if(userAmount >= amount && amount < 0){
			userAmount -= amount;
		}
		
		user.setAmount(userAmount);
	}

}
