package bg.jwd.library.dao.lend;

import java.text.SimpleDateFormat;

import javax.persistence.EntityManager;
import javax.persistence.PersistenceContext;
import javax.persistence.Query;

import org.springframework.stereotype.Repository;
import org.springframework.transaction.annotation.Transactional;

import bg.jwd.library.entity.book.Lend;

@Repository
public class LendDaoImpl implements LendDao {

	@PersistenceContext
	private EntityManager entityManager;

	@Override
	@Transactional
	public Boolean lendBook(Long userId, Long bookId, Lend lend) {
		Query addBook = entityManager.createNativeQuery(
				"INSERT INTO lends (user_id, book_id, date_of_lending, date_of_return)" + "VALUES(?, ?, ?, ?)");

		java.util.Date dateOfLendDate = new SimpleDateFormat("yyyy-MM-dd").parse(lend.getDateOfLending());
		java.sql.Date sqlDateOfLend = new java.sql.Date(dateOfLendDate.getTime());

		java.util.Date dateOfReturn = new SimpleDateFormat("yyyy-MM-dd").parse(lend.getDateOfReturn());
		java.sql.Date sqlDateOfReturn = new java.sql.Date(dateOfReturn.getTime());

		addBook.setParameter(1, userId).setParameter(2, bookId).setParameter(3, sqlDateOfLend)
			.setParameter(4, sqlDateOfReturn).executeUpdate();

		return true;
	}

}
