package bg.jwd.ejb;

import java.util.Map;

import javax.ejb.EJB;
import javax.ejb.Stateful;

@Stateful
public class BankOperationImpl implements BankOperation {
	
	@EJB
	private UserOperation userOperation;

	@Override
	public void deposite(Map<String, Double> users, double depositMoney) {
		amount += depositMoney;	
		
		return amount;
	}

	@Override
	public void withdraw(Map<String, Double> users, double withdrawMoney) {
		amount -= withdrawMoney;
		
		return amount;
	}

}
